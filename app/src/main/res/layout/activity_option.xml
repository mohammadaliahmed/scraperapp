<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sd"
    tools:context="com.appsinventiv.numberscraper.Option">

    <Button
        android:id="@+id/pakwheels"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/zameen"
        android:layout_below="@+id/olx"
        android:layout_marginTop="23dp"

        android:visibility="gone"
        android:background="@color/colorPrimaryDark"
        android:text="Pakwheels"
        android:textColor="#fff" />

    <Button
        android:id="@+id/zameen"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignTop="@+id/pakwheels"
        android:layout_marginTop="70dp"
        android:background="#15A043"
        android:visibility="gone"
        android:text="Zameen.com"
        android:textColor="#fff" />

    <Button
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:text="Olx.com.pk"
        android:id="@+id/olx"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/pakwheels" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:textSize="18sp"
        android:text="Where you want to get numbers from?" />

    <Button
        android:id="@+id/history"
        android:layout_width="200dp"

        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pakwheels"
        android:layout_below="@+id/pakwheels"
        android:layout_marginTop="32dp"
        android:background="@color/colorGreen"
        android:text="History"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="More options comming soon!!" />
</RelativeLayout>
